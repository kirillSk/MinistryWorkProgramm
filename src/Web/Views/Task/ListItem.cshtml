@using BusinessLogic.Services
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="grid fluid" style="width: 70%">
    <div class="row">
        <div class="span3">
            <a href="@Url.Action("List")"><i class="icon-undo on-left"></i>Задачи</a> 
        </div>
        <div class="span9 text-right">
        @if (ViewBag.Actions != null)
        {
            foreach (ActionNameAndNextState action in ViewBag.Actions)
            {
                <a href="@Url.Action("SetTaskState")?taskState=@action.TaskState.ToString()&id=@ViewBag.TaskId" class="button info margin15 padding20">@action.BtnTitle</a>
            }
        }            
        </div>
    </div>
</div>

<div>
    @RenderBody()
</div>